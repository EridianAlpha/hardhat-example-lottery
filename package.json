  "license": "MIT",
  "devDependencies": {
    "@chainlink/contracts": "^0.6.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@openzeppelin/contracts": "^4.8.1",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "ganache-cli": "^6.12.2",
    "hardhat": "^2.12.6",
    "hardhat-deploy": "^0.11.22",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.1",
    "solhint": "^3.3.8",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "clean": "yarn hardhat clean",
    "compile": "yarn hardhat compile",
    "format": "yarn prettier --write .",
    "lint": "yarn solhint 'contracts/*.sol'",
    "lint:fix": "yarn solhint 'contracts/*.sol' --fix",
    "coverage": "yarn hardhat coverage",
    "test": "yarn hardhat test",
    "test:local": "yarn hardhat test --network localhost",
    "test:goerli": "yarn hardhat test --network goerli",
    "deploy": "yarn hardhat deploy",
    "deploy:local": "yarn hardhat deploy --network localhost",
    "deploy:goerli": "yarn hardhat deploy --network goerli",
    "slither": "slither contracts/ --solc-remaps '@openzeppelin=node_modules/@openzeppelin @chainlink=node_modules/@chainlink' --exclude naming-convention,external-function,low-level-calls"
  }
}
